<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>Chat History</h1>
    <div class="container">
      <% messages.forEach(function(message, index) { %>
      <div class="message">
        <div class="user-bar">
          <a class="details" href="/message/<%= message.id %>">Details</a>
          <strong><%= message.user_name %></strong>
        </div>
        <div class="meta"><%= message.added.toLocaleString() %></div>
        <div><%= message.message_text %></div>
      </div>
      <% }) %>
    </div>
    <a href="/new" class="new-message-button">+ Message</a>
  </body>
</html>
